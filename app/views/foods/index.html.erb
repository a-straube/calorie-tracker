

<div class="well container col-md-5">
  <h2 class="center"><span id="food-calorie-counter"><%= @calorie_total %></span></h2>
  <p class="center">calories consumed</p>

  <p class="center"><span class="btn btn-default"><%= link_to "Enter Food", new_food_path, id: "good_shit", remote: true %></span></p>

  <table id="food_table">
    <tr>
      <th>Food</th>
      <th>Calories</th>
    </tr>
    <% for food in @foods %>
    <tr>
      <td><%= food.name %></td>
      <td><%= food.calories %></td>
    </tr>
    <% end %>
  </table>
</div>

<div class="col-md-1">

</div>

<div class="well container col-md-5">
  <h2 class="center"><%= @calories_burned %></h2>
  <p class="center">calories burned</p>

  <p class="center"><span class="btn btn-default"><%= link_to 'Enter Exercise', new_exercise_path %></span></p>

  <table>
    <tr>
      <th>Exercise</th>
      <th>Calories</th>
    </tr>
    <% for exercise in @exercises %>
    <tr>
      <td><%= exercise.exercise_type %></td>
      <td><%= exercise.calories %></td>
    </tr>
    <% end %>
  </table>
</div>
